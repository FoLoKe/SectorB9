<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
	android:background="#000000">
    <LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:orientation="vertical">
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#ffffff"
			>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="SAVE INFO"
			android:textColor="#000000"
			
			android:layout_margin="10dp"
		/>
	
		</FrameLayout>
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#000000"
		>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="debug INFO"
				android:textColor="#ffffff"
				android:id="@+id/load_game_uiInfoText"
				android:layout_margin="10dp"
			/>

		</FrameLayout>
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"

		>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="vertical"
			>
			<Button
				android:id="@+id/load_menu_load_game"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:textColor="#ffffff"
				android:text="Load"/>
			
			<Button
				android:id="@+id/load_menu_delete_game"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:textColor="#ffffff"
				android:text="delete save"/>
		</LinearLayout>
		</FrameLayout>
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="fill_parent"
			
		>
		<Button
			android:id="@+id/back_from_load"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:textColor="#ffffff"
			android:text="Back"/>
		</FrameLayout>
	</LinearLayout>
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical">
	<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/load_game_saves_table"
		android:layout_margin="5dp">
		<TableRow
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="tebug"
			/>
		</TableRow>
	</TableLayout>
	</ScrollView>
</LinearLayout>
