<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/inventoryUI"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#55ffffff"
	android:layout_gravity="center"
	android:gravity="center">
	
	<LinearLayout
		android:layout_gravity="top"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<ScrollView
			android:id="@+id/PlayerScrollView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:focusableInTouchMode="true"
			android:gravity="left"
			android:layout_gravity="left"
			>
			<TableLayout
				android:id="@+id/PlayerTableLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#ffffff"
				android:layout_margin="10dp"
				>
			</TableLayout>
		,</ScrollView>
		<FrameLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			
			android:layout_weight="1">
		<LinearLayout
			android:gravity="center_vertical"
			android:layout_gravity="center"
			android:orientation="horizontal"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			
			
			>
			<Button
				android:id="@+id/InventoryUI_oneItemButton"
				android:text="1"
				android:textColor="#ffffff"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"/>
			<Button
				android:id="@+id/InventoryUI_halfItemButton"
				android:text="1/2"
				android:textColor="#ffffff"
				android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:gravity="center"/>
			<Button
				android:id="@+id/InventoryUI_allItemButton"
				android:text="all"
				android:textColor="#ffffff"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"/>
		</LinearLayout>
		</FrameLayout>
		<ScrollView
			android:id="@+id/ObjectScrollView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="right"
			android:layout_gravity="right"
			android:layout_alignParentRight="true"
			android:focusableInTouchMode="true"
			
			>
			<TableLayout
				android:id="@+id/ObjectTableLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/background_ui"
				android:layout_margin="10dp">
			</TableLayout>
		,</ScrollView>
	</LinearLayout>
</FrameLayout>
